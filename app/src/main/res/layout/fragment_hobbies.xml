<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:contentDescription="@string/mySkill_scrollView"
    tools:context=".SkillFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:text="My Hobbies"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_hobbies"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:text="@string/_1_cooking"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cookingimage"
                    android:src="@mipmap/ic_cooking" />

                <TextView
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:justificationMode="inter_word"
                    android:text="@string/cookingTxt"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="@string/_2_music"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/_2_music"
                    android:src="@mipmap/ic_music" />

                <TextView
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:layout_gravity="center_vertical"
                    android:text="@string/musicTxt"
                    tools:ignore="UnusedAttribute" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="@string/_3_gaming"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/_3_gaming"
                    android:src="@mipmap/ic_gaming" />

                <TextView
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:justificationMode="inter_word"
                    android:text="@string/gmaingTxt"
                    tools:ignore="UnusedAttribute" />




            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="@string/_4_designing"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/_4_designing"
                    android:src="@mipmap/ic_design" />

                <TextView
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:justificationMode="inter_word"
                    android:text="@string/designTxt"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="@string/_5_basketball"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/cardColor"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/_5_basketball"
                    android:src="@mipmap/ic_basketball" />

                <TextView
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:justificationMode="inter_word"
                    android:text="@string/basketballTxt"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>