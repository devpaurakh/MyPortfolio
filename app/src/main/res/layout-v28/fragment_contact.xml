<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contactBackGroundColor"
    android:contentDescription="@string/this_is_scrollviewincontactpage"
    tools:context=".ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:text="@string/contact_me"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_baseline_phone_24" />

        </LinearLayout>

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:contentDescription="@string/illustrtion_contact"
            android:src="@drawable/ic_contacting"
            tools:ignore="ImageContrastCheck"/>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/cardHolder"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="130dp"
            android:paddingHorizontal="40dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="105dp"
                app:cardCornerRadius="10dp"
                android:focusableInTouchMode="true"
                android:outlineAmbientShadowColor="@color/black"
                android:clickable="true"
                android:layout_height="100dp"
                android:focusable="true"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:id="@+id/callme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="@string/call_me"
                    android:textSize="18sp"
                    app:drawableTopCompat="@drawable/ic_baseline_phone_24"
                    android:focusable="true" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eMail"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="340dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="20dp"
                    android:autofillHints=""
                    android:background="@drawable/item_for_form_back_ground"
                    android:hint="@string/enter_my_email_given_below"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="#757575"
                    android:textSize="15sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/sendMail"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="90dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/send"
                    android:textColor="@color/white"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:text="@string/contact_here"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:text="@string/phone_no_9848840209"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:text="@string/email_paurakhsaud2019_gmail_com"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/github"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/github"
                android:src="@mipmap/ic_github" />

            <ImageView
                android:id="@+id/linkedIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/linkedin"
                android:src="@mipmap/ic_linkedin" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/twitter"
                android:src="@mipmap/ic_twitter" />

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/instagram"
                android:src="@mipmap/ic_instagram" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


    </LinearLayout>
</ScrollView>